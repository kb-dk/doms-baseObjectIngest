
<def:batchModify xmlns:def="http://www.fedora.info/definitions/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://www.fedora.info/definitions/ http://naiad:7880/schemaStore/batchModifySchema.xsd">

    <def:modifyObject pid="doms:Template_Shard" state="I"
                      logMessage="Updating objects as part of a doms install/upgrade"/>
    <def:modifyDatastream pid="doms:Template_Shard" dsID="RELS-EXT"
                          dsLabel="Relationships"
                          dsMIME="application/rdf+xml"
                          formatURI="info:fedora/fedora-system:FedoraRELSExt-1.0"
                          versionable="true"
                          altIDs="" dsControlGroupType="X" dsState="A"
                          checksumType="DISABLED"
                          logMessage="Updating objects as part of a doms install/upgrade">
        <def:xmlData>
            <rdf:RDF xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
                     xmlns:doms="http://doms.statsbiblioteket.dk/relations/default/0/1/#"

                    >
                <rdf:Description rdf:about="info:fedora/doms:Template_Shard">
                    <hasModel rdf:resource="info:fedora/doms:ContentModel_Shard"
                              xmlns="info:fedora/fedora-system:def/model#"/>
                    <hasModel rdf:resource="info:fedora/doms:ContentModel_DOMS"
                              xmlns="info:fedora/fedora-system:def/model#"/>
                    <hasModel rdf:resource="info:fedora/doms:ContentModel_File"
                              xmlns="info:fedora/fedora-system:def/model#"/>
                    <doms:isPartOfCollection rdf:resource="info:fedora/doms:RadioTV_Collection"/>
                    <doms:hasLicense rdf:resource="info:fedora/doms:RadioTV_InhouseLicense"/>
                    <doms:isTemplateFor rdf:resource="info:fedora/doms:ContentModel_Shard"/>
                </rdf:Description>
            </rdf:RDF>

        </def:xmlData>
    </def:modifyDatastream>
    <def:modifyDatastream pid="doms:Template_Shard" dsID="SHARD_METADATA"
                          dsLabel="Shard datastream"
                          dsMIME="text/xml"
                          versionable="true"
                          altIDs="" dsControlGroupType="X" dsState="A"
                          checksumType="MD5"
                          logMessage="Updating objects as part of a doms install/upgrade">
        <def:xmlData>
            <shard_metadata>
                INSERT_SHARD_METADATA
            </shard_metadata>

        </def:xmlData>
    </def:modifyDatastream>



</def:batchModify>