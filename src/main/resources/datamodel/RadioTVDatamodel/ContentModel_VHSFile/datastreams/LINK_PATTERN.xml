<lp:linkPatterns xmlns:lp="http://doms.statsbiblioteket.dk/types/linkpattern/0/1/#">
    <lp:linkPattern>
        <lp:name>Open in Bart</lp:name>
        <lp:description>Get the file in Bart</lp:description>
        <lp:value>{contextParam.digitv.bartlocation}/recorder/quality.jsp?filename={filename}</lp:value>
        <lp:replacements>
            <lp:replacement>
                <lp:key>filename</lp:key>
                <lp:datastream>VHS_METADATA</lp:datastream>
                <lp:xpath>/vhs_metadata/filename</lp:xpath>
            </lp:replacement>
        </lp:replacements>
    </lp:linkPattern>
</lp:linkPatterns>

